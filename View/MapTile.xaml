<UserControl x:Class="LevelEditor.View.MapTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelEditor.View"
             mc:Ignorable="d" 
             x:Name="mapTile"
             d:DesignHeight="48" d:DesignWidth="48"
             >
    <Grid DataContext="{Binding ElementName=mapTile}">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left">
            <Image x:Name="MapTileImage" Height="48" Width="48" MouseEnter="OnEnter" MouseLeftButtonDown="OnClick" HorizontalAlignment="Left" Source="{Binding ImageSource}"></Image>
        </Border>
    </Grid>
</UserControl>
