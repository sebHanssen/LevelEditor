<UserControl x:Class="LevelEditor.View.UserTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LevelEditor.View"
             mc:Ignorable="d" 
             x:Name="userTile"
             d:DesignHeight="48" d:DesignWidth="48"
             >
    <Grid DataContext="{Binding ElementName=userTile}">
        <Button Height="48" Width="48" VerticalAlignment="Top" Margin="0,15,0,0">
            <Image MouseLeftButtonDown="SelectUserTile" Source="{Binding ImageSource}"></Image>
        </Button>
    </Grid>
</UserControl>
